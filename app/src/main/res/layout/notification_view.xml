<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_black">

    <RelativeLayout
        android:id="@+id/notifiy_rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="7"
        android:padding="@dimen/pad_top_bottom"
        android:paddingLeft="@dimen/pad_mid"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/notification_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:paddingBottom="@dimen/pad_mid"
            android:paddingLeft="@dimen/pad_top_bottom"
            android:textSize="@dimen/normal_font_size"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="@color/text_color_light"/>

        <TextView
            android:id="@+id/notification_tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="@dimen/small_font_size"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="@color/text_color_light"
            android:paddingTop="@dimen/pad_mid"
            android:paddingLeft="@dimen/pad_top_bottom"
            android:layout_below="@id/notification_tv_name"/>
    </RelativeLayout>
    <Button
        android:paddingRight="19dp"
        android:paddingTop="7dp"
        android:id="@+id/notification_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text=""
        android:background="@color/background_black"
        android:drawableRight="@drawable/ic_call_white_24dp"/>
    <!--<ImageButton-->
        <!--android:id="@+id/notification_iv"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_alignParentTop="true"-->
        <!--app:srcCompat="@drawable/ic_call_white_24dp"-->
        <!--android:layout_toRightOf="@+id/notifiy_rl" />-->
</RelativeLayout>
