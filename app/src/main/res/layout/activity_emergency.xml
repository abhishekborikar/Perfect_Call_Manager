<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="abhishek.redvelvet.com.perfect_call_manager.EmergencyNotification.EmergencyActivity">


    <Switch
        android:id="@+id/emegy_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="@dimen/pad_top_bottom"
        android:textSize="@dimen/normal_font_size"
        android:textStyle="bold"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Emergency" />

    <RelativeLayout
        android:id="@+id/emegy_contact_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/emegy_switch">

        <ImageView
            android:id="@+id/emegy_img_letter"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            />

        <TextView
            android:id="@+id/emegy_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emegy_img_letter"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:textSize="20dp"
            android:textColor="@color/divider_color"
            android:textStyle="bold"
            android:fontFamily="sans-serif-smallcaps"
            android:text="TextView"
            android:textAlignment="center"/>


    </RelativeLayout>

    <ListView
        android:id="@+id/emegy_lv"
        android:layout_below="@+id/emegy_contact_info"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:padding="@dimen/pad_mid"
        android:layout_marginTop="10dp" />


</RelativeLayout>
